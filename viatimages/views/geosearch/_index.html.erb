<div id="mapsearchregions">
  <div class="geosearch-filters">
    <select class="sel_mapsearch" id="sel_regions" name="sel_regions">
      <option value="" selected="selected"><%= t('.viat-geosearch-regions') %></option>
    </select>

    <select class="sel_mapsearch" id="sel_villes" name="sel_villes">
      <option value="" selected="selected"><%= t('.viat-geosearch-cities') %></option>
    </select>

    <select class="sel_mapsearch" id="sel_vallees" name="sel_vallees">
      <option value="" selected="selected"><%= t('.viat-geosearch-valleys') %></option>
    </select>

    <select class="sel_mapsearch" id="sel_chaines_montagnes" name="sel_chaines_montagnes">
      <option value="" selected="selected"><%= t('.viat-geosearch-mountain-ranges') %></option>
    </select>

    <select class="sel_mapsearch" id="sel_cols" name="sel_cols">
      <option value="" selected="selected"><%= t('.viat-geosearch-passes') %></option>
    </select>
    <select class="sel_mapsearch" id="sel_montagnes" name="sel_montagnes">
      <option value="" selected="selected"><%= t('.viat-geosearch-mountains') %></option>
    </select>

    <select class="sel_mapsearch" id="sel_lacs" name="sel_lacs">
      <option value="" selected="selected"><%= t('.viat-geosearch-lakes') %></option>
    </select>

    <select class="sel_mapsearch" id="sel_cours_eau" name="sel_cours_eau">
      <option value="" selected="selected"><%= t('.viat-geosearch-rivers') %></option>
    </select>

    <select class="sel_mapsearch" id="sel_cascades" name="sel_cascades">
      <option value="" selected="selected"><%= t('.viat-geosearch-waterfalls') %></option>
    </select>

    <select class="sel_mapsearch" id="sel_glaciers" name="sel_glaciers">
      <option value="" selected="selected"><%= t('.viat-geosearch-glaciers') %></option>
    </select><br>

    <select id="sel_ouvrage_map" name="sel_ouvrage">
      <option value="" selected="selected"><%= t('.viat-geosearch-book') %></option>
    </select>
  </div>
</div>

<div id="map-wrapper">
  <% if @container %>
    <%= react_component('GeoViewer/components/GeoViewer', {
      features: @container.geojson.to_json,
      layers: @container.geo_layers,
      mapHeight: @container.map_height,
      catalog: @catalog.slug,
      locale: I18n.locale
    }) %>
  <% end %>
</div>

<div id="map-outer">
  <div class="warning-icon">
    <%= image_tag("attention-13px.gif", alt: "Attention") %>
  </div>

  <p>
    <%= t('.viat-geosearch-warning_html') %>
  </p>
  <hr id="map-outer-border">
</div>
