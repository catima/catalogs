<% content_for :top_content do %>
  <div class="top-content-type-home">
    <div id="searchbox">
      <!-- Standard search -->
      <%= bootstrap_form_tag(
              :url => { :controller => "simple_search", :action => "index" },
              :method => "GET",
              :layout => :inline ) do |f| %>

        <%= hidden_field_tag(:type, "images") %>
        <%= f.search_field(
                :q,
                :value => params[:q],
                :label => "Search",
                :hide_label => true,
                :autofocus => false,
                :class => "txtSearch",
                :placeholder => t(".viat-standard-search-placeholder")
            ) %>

        <%= f.submit(t(".viat-search-btn"), :class => 'btn simple-search') %>
      <% end %>

      <div id="searchlinks-home">
        <%= render("shared/search/geo_search") %>
        <%= render("shared/search/advanced_search") %>
      </div>

      <div id="searchdomain">
        <span><%= t(".viat-by-domain") %></span>
        <div id="searchdomain-dropdown">
          <select id="sel_domain_court" name="sel_domain_court">
            <option value="" selected="selected"><%= t(".viat-select-domain") %></option>
            <% @domain_choice_set_items.each_with_index do | domain, index | %>
              <option value="<%= index %>"><%= domain.short_name %></option>
            <% end %>
          </select>
        </div>
      </div>

      <div id="searchcorpus">
        <span><%= t(".viat-by-corpus") %></span>
        <div id="searchcorpus-dropdown">
          <select id="sel_corpus" name="sel_corpus">
            <option value="" selected="selected"><%= t(".viat-select-corpus") %></option>
            <% @corpus_type_items.each do | corpus | %>
              <option value="<%= corpus.get_value('id-corpus') %>"><%= corpus.get_value('title').truncate(70) %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>
  </div>
<% end %>