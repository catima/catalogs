<div id="ouvrage">
  <% if strip_tags(field_value(@item, @title)).present? %>
    <h2 id="titreOuvrage"><%= field_value(@item, @title) %></h2>
  <% end %>

  <% if strip_tags(field_value(@item, @title_long)).present? %>
    <h4 id="titreOuvrageLong"><%= field_value(@item, @title_long) %></h4>
  <% end %>

  <p id="corpus-persos">
    Personnes associ√©es ?
  </p>

  <div id="corpus-details">
    <p class="corpusInfo">
      <span><%= t(".viat-publisher") %>:</span> ?<br>
      <% if strip_tags(field_value(@item, @date_edition)).present? %>
        <span><%= @date_edition.label %>:</span> <%= field_value(@item, @date_edition) %><br>
      <% end %>
      <% if strip_tags(field_value(@item, @lieu_edition)).present? %>
        <span><%= @lieu_edition.label %>:</span> <%= field_value(@item, @lieu_edition) %>
      <% end %>
    </p>

    <p class="corpusInfo">
      <span><%= t(".viat-online-book-collection") %>:&nbsp;</span> ?
    </p>

    <p class="corpusInfo">
      <span><%= t(".viat-description") %>:</span><br>
      ?
      <% if strip_tags(field_value(@item, @tome_volume)).present? %>
        - <%= field_value(@item, @tome_volume) %> Tome(s)/Volume(s)
      <% end %>
      <% if strip_tags(field_value(@item, @nbre_illustrations)).present? %>
      , <%= field_value(@item, @nbre_illustrations) %> illustration(s)
      <% end %>

      <br>

      <% if @etablissement.get_value('web').present? %>
        <a href="<%= @etablissement.get_value('web') %>" target="_blank"><%= field_value(@etablissement, @etablissement.item_type.find_field('name')) %></a>
      <% end %>
      <% if strip_tags(field_value(@item, @cote)).present? %>
        - <%= @cote.label %>: <%= field_value(@item, @cote) %>
      <% end %>
      <% if strip_tags(field_value(@item, @url_catalogue)).present? %>
        - <a href="<%= strip_tags(field_value(@item, @url_catalogue)) %>" target="_blank" title="<%= t(".viat-catalog-record") %>"><%= t(".viat-catalog-record") %></a>
      <% end %>
    </p>

    <% if strip_tags(field_value(@item, @comment)).present? %>
      <p class="corpusInfo">
        <span><%= @comment.label %>:</span><br>
        <%= field_value(@item, @comment) %>
      </p>
    <% end %>

    <p class="corpusInfo">
      <% if strip_tags(field_value(@item, @collection_ouvrage)).present? %>
        <span><%= @collection_ouvrage.label %>:</span> <%= field_value(@item, @collection_ouvrage) %><br>
      <% end %>
      <% if strip_tags(field_value(@item, @langue_ouvrage)).present? %>
        <span><%= @langue_ouvrage.label %>:</span> <%= field_value(@item, @langue_ouvrage) %><br>
      <% end %>
      <% if strip_tags(field_value(@item, @autre_editions)).present? %>
        <span><%= @autre_editions.label %>:</span> <%= field_value(@item, @autre_editions) %>
      <% end %>
    </p>
  </div>

  <span class="searchmsg">
     <%= t(".viat-title-images",
           :images_count => @images_count,
           :corpus_title => @item.get_value('title')) %>
  </span>
</div>

<% fields_and_item_references(@item) do |field, browse| %>
  <%= render_item_list(browse) %>
  <% if browse.more? %>
    <%= link_to(items_path(
                    :item_type_slug => browse.item_type,
                    browse.field.slug => browse.value
                )) do %>
      <%= t(".viat-view-more") %>
    <% end %>
  <% end %>
<% end %>